{
  "name": "mesh",
  "version": "1.0.0",
  "description": "A lightweight, pure CSS framework.",
  "main": "index.js",
  "scripts": {
    "build-css": "node-sass --include-path scss src/scss/mesh.scss dist/css/mesh.css && node-sass --include-path scss src/scss/mesh.scss dist/css/mesh.min.css --output-style compressed",
    "watch-css": "nodemon -e scss -x \"npm run build-css\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ainsleyclark/mesh.git"
  },
  "author": "Ainsley Clark",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ainsleyclark/mesh/issues"
  },
  "homepage": "https://github.com/ainsleyclark/mesh#readme",
  "devDependencies": {
    "node-sass": "^4.11.0",
    "nodemon": "^1.18.10",
    "webpack-dev-server": "^3.2.1"
  }
}
